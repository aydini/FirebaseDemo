<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #b6b6b6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemospring2024.RegistrationView">
    <children>
        <Label layoutX="170.0" layoutY="14.0" stylesheets="@Style.css" text="Register User">
            <font>
                <Font name="Britannic Bold" size="36.0" />
            </font>
        </Label>
        <Button fx:id="registerButtoon" layoutX="247.0" layoutY="335.0" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="50.0" prefWidth="109.0" style="-fx-background-color: #cea3a3;" styleClass="button-shadows" stylesheets="@Style.css" text="Create Account">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font></Button>
        <VBox layoutX="171.0" layoutY="58.0" prefHeight="269.0" prefWidth="262.0" spacing="10.0">
            <children>
                <Label prefHeight="26.0" prefWidth="90.0" text="Enter Email">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="emailTextField" promptText="Enter Email" />
                <Label text="Create Password">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>
                <TextField fx:id="passwordTextField" promptText="Enter password" />
            <Label text="Phone Number">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="phoneNumberTextField" promptText="Enter Phone Number" />
            <Label text="Name">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="displayNameTextField" promptText="Enter name" />
            </children>
        </VBox>
    </children>

</AnchorPane>
