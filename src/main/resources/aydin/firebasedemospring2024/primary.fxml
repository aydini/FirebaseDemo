<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-background-color: #b6b6b6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemospring2024.PrimaryController">
    <children>
        <VBox alignment="CENTER" prefHeight="373.0" prefWidth="530.0" spacing="20.0" stylesheets="@Style.css">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
            <Label text="CSC325-SW Engineering Student: check out the console window for the output messages..." />
                <TextField fx:id="nameTextField" promptText="name" styleClass="button-shadows" stylesheets="@Style.css" />
                <TextField fx:id="ageTextField" promptText="age" styleClass="button-shadows" />
            <TextField fx:id="phoneNumberTextField" promptText="Phone Number" styleClass="button-shadows" />
                <HBox alignment="TOP_CENTER" prefHeight="55.0" prefWidth="518.0" spacing="10.0">
                    <children>
                        <Button fx:id="readButton" mnemonicParsing="false" onAction="#readButtonClicked" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #cea3a3;" styleClass="button-shadows" stylesheets="@Style.css" text="Read" />
                        <Button fx:id="writeButton" mnemonicParsing="false" onAction="#writeButtonClicked" prefHeight="30.0" prefWidth="80.0" style="-fx-background-color: #cea3a3;" styleClass="button-shadows" stylesheets="@Style.css" text="Write" />
                        <Button fx:id="switchSecondaryViewButton" onAction="#switchToSecondary" prefHeight="30.0" prefWidth="180.0" style="-fx-background-color: #cea3a3;" styleClass="button-shadows" stylesheets="@Style.css" text="Switch to Secondary View" />
                    </children>
                </HBox>
                <TextArea fx:id="outputTextArea" prefHeight="218.0" prefWidth="507.0" promptText="Phone Number" style="-fx-border-color: ligthblue;" styleClass="button-shadows" stylesheets="@Style.css" />
            </children>
        </VBox>
    </children>
</AnchorPane>
