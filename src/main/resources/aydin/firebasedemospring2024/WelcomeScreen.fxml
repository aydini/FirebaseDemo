<AnchorPane prefHeight="401.0" prefWidth="600.0" style="-fx-background-color: #b6b6b6;" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aydin.firebasedemospring2024.WelcomeScreen">
   <children>
      <Label layoutX="170.0" layoutY="14.0" stylesheets="@Style.css" text="Welcome Screen">
         <font>
            <Font name="Britannic Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="registerButtoon" layoutX="260.0" layoutY="314.0" mnemonicParsing="false" onAction="#registerButtonClicked" prefHeight="26.0" prefWidth="82.0" style="-fx-background-color: #cea3a3;" styleClass="button-shadows" stylesheets="@Style.css" text="Register">
