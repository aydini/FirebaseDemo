               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <PasswordField fx:id="passwordField" promptText="Enter password" />
         </children>
      </VBox>
      <Label layoutX="205.0" layoutY="281.0" text="Don't have an account click below" textFill="#1b05e1" underline="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
